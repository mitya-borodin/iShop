{
  "name": "e-commerce-backend",
  "private": true,
  "version": "1.1.2",
  "license": "MIT",
  "scripts": {
    "start": "nodemon  --config nodemon.json --inspect=0.0.0.0:9229 src/entry.ts",
    "fmt": "prettier --write \"**/*.{ts,js,json}\"",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --no-cache",
    "build": "del dist && tsc --project ./tsconfig.build.json",
    "prepare": "del dist && tsc --project ./tsconfig.build.json",
    "outdated": "npm-check-updates",
    "upgrade": "npm-check-updates -u --target minor"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose"
    }
  },
  "lint-staged": {
    "*.(ts|js|json)": [
      "pretty-quick --staged --pattern **/*.{ts,js,json} --verbose --bail"
    ],
    "src/**/*.(ts|js)": [
      "npm run lint"
    ],
    "test/**/*.(ts|js)": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "@rtcts/ishop-shared": "^1.2.1",
    "@rtcts/isomorphic": "^1.6.2",
    "@rtcts/node": "^1.6.5",
    "@rtcts/utils": "^1.6.2",
    "bson": "^4.2.2",
    "chalk": "^4.1.0",
    "co-body": "^6.1.0",
    "dotenv": "^8.2.0",
    "eventemitter3": "^4.0.7",
    "file-type": "^16.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-compress": "^5.0.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "mongodb": "^3.6.4",
    "ms": "^2.1.3",
    "type-is": "^1.6.18",
    "uuid": "^8.3.2",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.8",
    "@types/koa-logger": "^3.1.1",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.29",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "npm-check-updates": "^11.1.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
